{
  "manifest_version": 2,

  "name": "Letter Count",
  "description": "Count the number of letters in the webpage.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon3.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "tabs", 
    "http://*/*",
    "https://*/*"
  ]
}

